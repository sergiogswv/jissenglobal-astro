---
import '../styles/global.css';
const { title, description } = Astro.props;
const image = '/images/logo/logotipo_original.png';
const url = Astro.url;
const siteUrl = 'https://www.jissenglobal.com'
const currentPath = Astro.url.pathname
console.log('currentPath', currentPath)
const canonicalUrl = `${siteUrl}${currentPath === '/' ? '' : currentPath}`
console.log('canonicalUrl', canonicalUrl)
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/images/logo/logotipo_original.svg" />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />
		<title>{title}</title>

		<link rel="canonical" href={canonicalUrl} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		<meta property="og:url" content={url} />
		<meta property="og:type" content="website" />

		<!-- Twitter Cards -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />

		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/images/logo/logotipo.png" />
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "Jissen Global",
				"url": "https://jissenglobal.com"
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
