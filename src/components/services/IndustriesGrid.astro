---
const industries = [
    {
        image: '/images/services/manufacto.webp',
        title: 'Manufactura',
        description: 'Mantén la producción en marcha con insumos a tiempo.',
    },
	{
		image: '/images/services/automobility.webp',
		title: 'Automotriz',
		description: 'Logística segura para el sector automotriz y autopartes.',
	},
	{
		image: '/images/services/energy.webp',
		title: 'Energía',
		description: 'Transporte especializado para equipos y proyectos energéticos.',
	},
	{
		image: '/images/services/others.webp',
		title: 'Perecederos',
		description: 'Carga refrigerada con control de temperatura.',
	},
];
---

<section class="background-principal py-12 md:py-20">
	<div class="max-w-7xl mx-auto px-4">
		<!-- Título y Subtítulo -->
		<div class="text-center mb-12 md:mb-16">
			<h2 class="text-4xl md:text-6xl font-bold text-yellow-400 mb-4">
				Soluciones por Industria
			</h2>
			<p class="text-xl md:text-3xl text-white max-w-4xl mx-auto">
				"Tu sector, nuestra especialidad."
			</p>
		</div>

		<!-- Grid de Industrias -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
			{
				industries.map((industry) => (
					<div class="group">
						<div class="overflow-hidden rounded-lg shadow-lg mb-4">
							<img
								src={industry.image}
								alt={industry.title}
								class="w-full h-48 md:h-56 object-cover transition-transform duration-300 group-hover:scale-110"
							/>
						</div>
						<h3 class="text-2xl md:text-3xl font-bold text-yellow-400 mb-3">
							{industry.title}
						</h3>
						<p class="text-base md:text-lg text-white">
							{industry.description}
						</p>
					</div>
				))
			}
		</div>

		<!-- Footer Text -->
		<div class="mt-12 md:mt-16 text-center">
			<p class="text-xl md:text-2xl text-white max-w-5xl mx-auto">
				¿Necesitas una solución personalizada?
			</p>
			<p class="text-xl md:text-2xl text-white max-w-5xl mx-auto">
				Nos adaptamos a tus necesidades.
			</p>
		</div>
	</div>
</section>
