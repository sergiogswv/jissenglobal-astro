---
const slides = [
	{
		image: '/images/banner_principal_uno.webp',
		textImage: '/titles/text_uno.png',
	},
	{
		image: '/images/banner_principal_dos.webp',
		textImage: '/titles/text_dos.png',
	},
];
const LogoPrincipal = '/images/logo/logotipo_blanco.png';
---

<style>
	@keyframes slide {
		0%,
		45% {
			transform: translateX(0);
		} /* Primera imagen */
		50%,
		95% {
			transform: translateX(-100%);
		} /* Segunda imagen */
		100% {
			transform: translateX(0);
		} /* Vuelve a la primera */
	}
</style>

<div class="relative w-full h-[calc(100vh-10rem)] mx-auto overflow-hidden">
	<img
		src={LogoPrincipal}
		alt="Logo empresa en blanco"
		class="absolute inset-0 w-2/12 md:w-1/8 left-4 md:left-10 top-16 md:top-16 h-auto object-cover transition-opacity duration-1000 opacity-100 z-10"
	/>
	<div class="flex w-full animate-[slide_10s_infinite_ease-in-out] h-[calc(100vh-10rem)]">
		{
			slides.map((slide, index) => (
				<div class="w-full flex-shrink-0 flex flex-col items-center justify-center gap-4 relative h-[calc(100vh-10rem)]">
					<img src={slide.image} alt={`Imagen ${index + 1}`} class="w-full h-[calc(100vh-10rem)] object-cover absolute inset-0" />
					<img
						src={slide.textImage}
						alt={`Texto ${index + 1}`}
						class={`${index % 2 === 0 ? 'left-4 md:left-10 w-5/6 md:w-2/5' : 'right-4 md:right-0 w-10/12 md:w-2/4'} h-auto absolute z-10 top-1/3 md:top-2/6`}
					/>
					<a href="/contact" class="absolute color-button text-white text-sm md:text-4xl px-4 md:px-8 py-2 md:py-4 rounded-lg bottom-20 md:bottom-12 left-4 md:left-10 hover:cursor-pointer z-40 h-10 md:h-20 transition-all duration-300 hover:scale-105">
						Cont√°ctanos
					</a>
				</div>
			))
		}
	</div>
</div>
