---
const BannerPrincipal = '/images/Mesa de trabajo 25.webp';
const LogoPrincipal = '/images/logo/logotipo_blanco.png';
const IconPrincipal = '/icons/Mesa de trabajo 22.png';
const text = '/titles/about_text.png';
---

<section class="relative w-full max-h-screen mx-auto overflow-hidden">
	<a href="/">
		<img
			src={LogoPrincipal}
			alt="Logo empresa en blanco"
			class="absolute w-[17%] sm:w-[15%] md:w-[10%] left-4 sm:left-6 md:left-8 lg:left-10 top-4 sm:top-6 md:top-14 lg:top-14 h-auto object-contain z-10 transition-all duration-300 hover:opacity-90"
		/>
	</a>
	<div class="flex w-full relative">
		<img
			src={BannerPrincipal}
			alt={'Imagen de banner principal para seccion de nosotros'}
			class="w-full h-[500px] object-cover md:h-auto"
		/>

		<div class="absolute inset-0">
			<img
				src={IconPrincipal}
				alt="Construimos Conexiones"
				class="w-1/5 md:w-2/10 absolute z-30 right-5 md:right-10 bottom-36 sm:top-2/6 md:top-2/6"
			/>
			<img
				src={text}
				alt="Construimos Conexiones"
				class="w-3/4 sm:w-2/4 md:w-3/4 absolute z-30 right-0 bottom-10 sm:top-4/6 md:top-4/6"
			/>
		</div>
	</div>
</section>
